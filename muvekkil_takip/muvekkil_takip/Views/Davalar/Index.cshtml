@model IEnumerable<muvekkil_dava.Models.Dava>

@{
    ViewData["Title"] = "Dava Listesi";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Dava Ekle</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Müvekkil</th>
            <th>Tarih</th>
            <th>Konu</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dava in Model)
        {
            <tr>
                <td>@dava.Muvekkil?.AdSoyad</td>
                <td>@dava.Tarih.ToShortDateString()</td>
                <td>@dava.Konu</td>
                <td>@dava.Aciklama</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dava.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@dava.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@dava.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
