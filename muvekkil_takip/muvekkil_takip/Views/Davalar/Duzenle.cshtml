@model muvekkil_dava.Models.Dava

@{
    ViewData["Title"] = "Dava Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="MuvekkilId" class="control-label"></label>
        <select asp-for="MuvekkilId" class="form-control" asp-items="ViewBag.MuvekkilId"></select>
    </div>

    <div class="form-group">
        <label asp-for="Tarih" class="control-label"></label>
        <input asp-for="Tarih" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Konu" class="control-label"></label>
        <input asp-for="Konu" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Aciklama" class="control-label"></label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
