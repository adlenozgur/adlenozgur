@model muvekkil_dava.Models.Muvekkil

@{
    ViewData["Title"] = "Müvekkil Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="AdSoyad" class="control-label"></label>
        <input asp-for="AdSoyad" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Telefon" class="control-label"></label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Adres" class="control-label"></label>
        <textarea asp-for="Adres" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
