@model IEnumerable<muvekkil_dava.Models.Muvekkil>

@{
    ViewData["Title"] = "Müvekkil Listesi";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Müvekkil Ekle</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.AdSoyad</td>
                <td>@m.Email</td>
                <td>@m.Telefon</td>
                <td>@m.Adres</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@m.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
